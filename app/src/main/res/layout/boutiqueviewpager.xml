<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.administrator.jxue.MyViewPager
        android:id="@+id/boutique_vp"
        android:layout_width="match_parent"
        android:layout_height="200dp"></com.example.administrator.jxue.MyViewPager>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/boutique_vp"
        android:background="#10000000">
        <ImageView
            android:id="@+id/boutique_vpiv1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toLeftOf="@+id/boutique_vpiv2"
            android:src="@drawable/point_grey"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView

            android:id="@+id/boutique_vpiv2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toLeftOf="@+id/boutique_vpiv3"
            android:src="@drawable/page_now"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView

            android:id="@+id/boutique_vpiv3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toLeftOf="@+id/boutique_vpiv4"
            android:src="@drawable/page_now"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView

            android:id="@+id/boutique_vpiv4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toLeftOf="@+id/boutique_vpiv5"
            android:src="@drawable/page_now"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:id="@+id/boutique_vpiv5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/page_now"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>
</RelativeLayout>